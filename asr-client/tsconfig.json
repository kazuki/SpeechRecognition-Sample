{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["DOM", "DOM.Iterable", "WebWorker", "ES2017"],
    "module": "es2015",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist/",
    "typeRoots": ["types", "node_modules/@types"]
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
